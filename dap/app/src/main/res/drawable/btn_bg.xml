<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/system_color2"/>
            <stroke
                android:color="@color/system_color2"
                android:width="1dp"/>
        </shape>
    </item>


    <item>
        <shape>
            <solid
                android:color="@color/system_color"/>
            <stroke
                android:color="@color/system_color"
                android:width="1dp"/>
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>

</selector>